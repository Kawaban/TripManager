<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/editTextFrom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:text="From"
        tools:layout_editor_absoluteX="100dp"
        tools:layout_editor_absoluteY="94dp" />

    <EditText
        android:id="@+id/editTextTo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:text="To"
        tools:layout_editor_absoluteX="100dp"
        tools:layout_editor_absoluteY="174dp" />

    <RadioButton
        android:id="@+id/radioButtonRoundTrip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RoundTrip"
        tools:layout_editor_absoluteX="98dp"
        tools:layout_editor_absoluteY="330dp" />

    <EditText
        android:id="@+id/editTextDateReturn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="date"
        tools:layout_editor_absoluteX="100dp"
        tools:layout_editor_absoluteY="487dp" />

    <EditText
        android:id="@+id/editTextDateDeparture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="date"
        tools:layout_editor_absoluteX="99dp"
        tools:layout_editor_absoluteY="420dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Departure Date"
        tools:layout_editor_absoluteX="157dp"
        tools:layout_editor_absoluteY="401dp" />

    <Button
        android:id="@+id/buttonSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search"
        tools:layout_editor_absoluteX="157dp"
        tools:layout_editor_absoluteY="564dp" />

    <TextView
        android:id="@+id/textViewReturn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Return Date"
        tools:layout_editor_absoluteX="167dp"
        tools:layout_editor_absoluteY="468dp" />

    <EditText
        android:id="@+id/editTextNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        tools:layout_editor_absoluteX="102dp"
        tools:layout_editor_absoluteY="245dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Number of passengers"
        tools:layout_editor_absoluteX="134dp"
        tools:layout_editor_absoluteY="226dp" />

</androidx.constraintlayout.widget.ConstraintLayout>